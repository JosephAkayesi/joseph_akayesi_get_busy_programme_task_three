{{#if userData}}
<div class='container'>
    <div class="card">
        <div class="card-body">
            <div class='header text-center'>
                <h4 class="card-title" style='font-family: CircularStd-Black'>{{userData.name}}</h4>
                <h6 class="card-subtitle mb-2 text-muted" style='font-family: CircularStd-Black'>{{userData.email}}</h6>
                <p class="card-text" style='font-family: CircularStd-Black'>{{userData.username}}</p>
            </div>
            <div class='details'>
                <div class="form-group row">
                    <label for="staticEmail" class="col-form-label pl-5"><i data-feather="map-pin"></i></label>
                    <div class="col-sm-10">
                        <p class='mt-2' style='font-family: CircularStd-Book'>{{userData.address.street}}
                            <br />{{userData.address.suite}}
                            <br />{{userData.address.city}} <br />{{userData.address.zipcode}}</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-form-label pl-5"><i data-feather="navigation"></i></label>
                    <div class="col-sm-10">
                        <p class='mt-2' style='font-family: CircularStd-Book'>{{userData.address.geo.lat}},
                            {{userData.address.geo.lng}}</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-form-label pl-5"><i data-feather="smartphone"></i></label>
                    <div class="col-sm-10">
                        <p class='mt-2' style='font-family: CircularStd-Book'>{{userData.phone}}</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-form-label pl-5"><i data-feather="globe"></i></label>
                    <div class="col-sm-10">
                        <p class='mt-2' style='font-family: CircularStd-Book'>
                            <a href="https://{{userData.website}}">{{userData.website}}</a></p>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-form-label pl-5"><i data-feather="briefcase"></i></label>
                    <div class="col-sm-10">
                        <p class='mt-2' style='font-family: CircularStd-Book'>
                            <a>{{userData.company.name}}</a>
                            <br />
                            <a style='font-size: 14px'>{{userData.company.catchPhrase}}</a>
                            <br />
                            <a style='font-size: 12px'>{{userData.company.bs}}</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}